<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:orientation="vertical"
    tools:context="com.jso.tagit2.fragments.EditCatchFragment">

    <RelativeLayout
        android:id="@+id/image_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/image_catch"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageButton
            android:id="@+id/btn_browse_image"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_alignBottom="@+id/image_catch"
            android:layout_alignLeft="@+id/image_catch"
            android:background="@android:color/transparent"
            android:elevation="0dp"
            android:scaleType="fitCenter"
            android:src="@android:drawable/ic_menu_gallery" />

        <ImageButton
            android:id="@+id/btn_take_photo"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_alignBottom="@+id/image_catch"
            android:layout_alignRight="@+id/image_catch"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@android:drawable/ic_menu_camera" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Spinner
                android:id="@+id/spinner_fisher"
                style="@style/EditFishSpinner"
                app:layout_constraintTop_toTopOf="parent" />

            <Spinner
                android:id="@+id/spinner_species"
                style="@style/EditFishSpinner"
                app:layout_constraintTop_toBottomOf="@+id/spinner_fisher" />

            <Spinner
                android:id="@+id/spinner_bait"
                style="@style/EditFishSpinner"
                app:layout_constraintTop_toBottomOf="@+id/spinner_species" />
        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</LinearLayout>
